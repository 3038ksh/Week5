<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="5dp"
        android:background="#ce5c66"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="사과 Table(비어있음)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b1" />

        <Button
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="포도 Table(비어있음)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b2" />

        <Button
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="키위 Table(비어있음)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b3" />

        <Button
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="자몽 Table(비어있음)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b4" />
    </LinearLayout>

    <TableLayout
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="#747474"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="테이블명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />

            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:text=""
                android:textColor="#505066"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1" />
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="#747474"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="입장시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:text=""
                android:textColor="#505066"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2" />
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="#747474"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="스파게티"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:text=""
                android:textColor="#505066"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t3" />
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="#747474"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="피자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:text=""
                android:textColor="#505066"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t4" />
        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="#747474"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="멤버쉽카드"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:text=""
                android:textColor="#505066"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t5" />
        </TableRow>

        <TableRow
            android:background="#f1dfe4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:textColor="#747474"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:text="가격"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text=""
                android:textColor="#593735"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t6" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_span="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1dfe4">

        <Button
            android:padding="10dp"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="#c3c6c4"
            android:text="초기화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b5"
            android:layout_weight="1" />

        <Button
            android:padding="10dp"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="#c3c6c4"
            android:text="정보수정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b6"
            android:layout_weight="1" />

        <Button
            android:padding="10dp"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="#c3c6c4"
            android:text="새 주문"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b7"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>